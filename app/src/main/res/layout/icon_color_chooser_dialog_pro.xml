<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <TableRow
        android:id="@+id/color_row_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal">

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_white_1000"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="white"/>


        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_red_A400"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="red"
            />

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_pink_A100"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="pink"/>

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_purple_500"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="purple"/>

    </TableRow>

    <TableRow
        android:id="@+id/color_row_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/color_row_1">

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_indigo_500"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="indigo"/>

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_blue_500"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="blue"/>

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_cyan_A400"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="cyan" />

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_teal_500"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="teal" />
    </TableRow>

    <TableRow
        android:id="@+id/color_row_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/color_row_2">

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_green_A700"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="green" />

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_light_green_A400"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="light_green" />

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_yellow_500"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="yellow" />

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_orange_A400"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="orange" />
    </TableRow>

    <TableRow
        android:id="@+id/color_row_4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/color_row_3">

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_deep_orange_A200"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="deep_orange" />

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/md_blue_grey_500"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="bluegrey" />

        <com.rey.material.widget.FloatingActionButton
            style="@style/FloatingActionButton"
            android:id="@+id/icon_button_bt_float14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:fab_backgroundColor = "@color/black"
            app:fab_elevation="2dp"
            app:fab_radius="24dp"
            android:tag="black" />
    </TableRow>
</RelativeLayout>